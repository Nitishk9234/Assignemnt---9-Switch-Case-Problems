#include<stdio.h>
int main()
{
    int x;
    printf("Enter a number:");
    scanf("%d",&x);
    switch(x%2==0)
    {
    case 1:
        printf("Convert even number into its upper nearest odd number %d",++x);
        break;
    case 0:
        printf("Convert even number into its upper nearest odd number %d",x);
        break;
    }


    return 0;
}
