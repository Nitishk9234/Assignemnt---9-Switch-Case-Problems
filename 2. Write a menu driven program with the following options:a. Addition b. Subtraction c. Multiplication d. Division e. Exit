#include<stdio.h>
#include<stdlib.h>
int main()
{
    int x;
    while(1){
    printf("\n 1.Addition");
    printf("\n 2.substraction");
    printf("\n 3.multiplication");
    printf("\n 4.division");
    printf("\n 5.exit");
    printf("\nenter Your choice:");
    scanf("%d",&x);

    switch(x)
    {
        int a,b;
        case 1:
        printf("\n Enter two number ");
        scanf("%d%d",&a,&b);
        printf("\n sum is %d",a+b);
        break;
        case 2:
        printf("\n Enter two number ");
        scanf("%d%d",&a,&b);
        printf("\n difference is %d",a-b);
        break;
        case 3:
        printf("\n Enter two number ");
        scanf("%d%d",&a,&b);
        printf("\nmultiplication is %d",a*b);
        break;
        case 4:
        printf("\n Enter two number ");
        scanf("%d%d",&a,&b);
        printf("\ndivision is %d",a/b);
        break;
        case 5:
            exit(0);

        default:
        printf("Invalid input");
    }
    }

    return 0;
}
